<div
  class="container d-flex flex-column align-items-center my-4 py-3 tales carousel-inner"
>

  <form method="post" action="/stockData">
    <div class="card mb-2" >
      <div class="card-body p-2">
        <div class="input-group input-group-lg">
          <input
            type="text"
            name="stock"
            class="form-control form-control-lg rounded"
            placeholder="Escribe el ticker"
            aria-label="Type Keywords"
            aria-describedby="basic-addon2"
          />

          <span class="input-group-text border-0" id="basic-addon2"><i
              class="fas fa-search"
            ></i></span>

          <button class="btn btn-light btn-lg active " type="submit">Buscar</button>

